    <div id="masthead">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="title">Book Review Library
          <p class="lead"></p>
        </h1>
                </div>
                <div class="col-md-5">

                </div>
            </div>
        </div>
        <!-- /cont -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                </div>
            </div>
        </div>
        <!-- /cont -->
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-body">
                        <!--/stories-->
                        <!-- Elastislide Carousel -->

                        <div id="rg-gallery" class="rg-gallery">
                            <div class="rg-thumbs">
                                <!-- Elastislide Carousel Thumbnail Viewer -->
                                <div class="es-carousel-wrapper">
                                    <div class="es-nav">
                                        <span class="es-nav-prev">Previous</span>
                                        <span class="es-nav-next">Next</span>
                                    </div>
                                    <div class="es-carousel">
                                        <ul>
                                            <%for(var i=books.length-1;i>=0;i--){%>
                                                <li>
                                                    <a href="/Books/<%=books[i]._id%>"><img src="<%=books[i].image_url%>" data-large="images/1.jpg" alt="<%=books[i].title%>" data-description="From off a hill whose concave womb reworded" /></a>
                                                </li>
                                                <%}%>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- End Elastislide Carousel Thumbnail Viewer -->
                        </div>
                        <!-- rg-thumbs -->
                        <!-- End Elastislide Carousel -->
                        <hr>
                        <div class="row">
                            <br>
                            <div class="col-md-10 col-sm-9">
                                <script>
                                    <% if (temp == 1) { %>
                                    swal("Thank You", " Your New Account has been created !", "success");
                                    <%}%>
                                </script>
                                <%if(user.username!==undefined){%>

                                    <hr>
                                    <br>
                                    <h1>You are logged in as <%=(user.username)%></h1>
                                    <%}else{%>
                                        <script>
                                            swal({
                                                title: 'Enter a username',
                                                input: 'text',
                                                showCancelButton: false,
                                                confirmButtonText: 'Submit',
                                                showLoaderOnConfirm: true,
                                                background: '#fff url(http://cdn30.us1.fansshare.com/image/backgroundimage/tumblr-static-plain-background-plain-1713168784.jpg)',
                                                allowOutsideClick: false,
                                                preConfirm: function (text) {
                                                    return new Promise(function (resolve, reject) {
                                                        re = /^\w+$/;
                                                        setTimeout(function () {
                                                            if (text == "") {
                                                                reject('Username cannot be empty!');
                                                            } else if (!re.test(text)) {
                                                                reject('Username must contain only letters, numbers and underscores!');
                                                            } else {
                                                                resolve();
                                                            }
                                                        }, 1000);
                                                    });
                                                },
                                            }).then(function (text) {
                                                console.log(text);
                                                $.ajax({
                                                    url: "/Auth/username?username=" + text,
                                                    data: {
                                                        username: text
                                                    },
                                                    type: "POST",
                                                    dataType: 'json',
                                                    statusCode: {
                                                        404: function () {
                                                            swal({
                                                                title: "OOPS! Username already exists!",
                                                                text: "Reloading the page",
                                                                type: "error",
                                                                background: '#fff url(http://cdn30.us1.fansshare.com/image/backgroundimage/tumblr-static-plain-background-plain-1713168784.jpg)',
                                                                showCancelButton: true
                                                            });
                                                            window.setTimeout(function () {
                                                                location.reload();
                                                            }, 1000);
                                                        },
                                                        200: function () {
                                                            swal({
                                                                title: "Hurrah! Username " + text + " is created and registered",
                                                                text: "Reloading the page",
                                                                type: "success",
                                                                background: '#fff url(http://cdn30.us1.fansshare.com/image/backgroundimage/tumblr-static-plain-background-plain-1713168784.jpg)',
                                                                showCancelButton: false
                                                            });
                                                            window.setTimeout(function () {
                                                                location.reload();
                                                            }, 2000);
                                                        }
                                                    },
                                                    success: function () {
                                                        console.log('Success');
                                                    },
                                                    error: function (xhr, ajaxOptions, thrownError) {
                                                        swal("Oops", "Something went wrong..Reloading the page", "error");
                                                        window.setTimeout(function () {
                                                            location.reload();
                                                        }, 1000);
                                                    }
                                                });
                                            });
                                        </script>
                                        <%}%>
                                            <div class="row">
                                                <div class="col-xs-3">
                                                    <div class="clear"> </div>
                                                </div>
                                            </div>
                                            <br>
                                            <br>
                            </div>
                        </div>
                        <hr>

                        <!--/stories-->
                        <a href="/Auth/addBook" class="btn btn-primary pull-left btnNext">Add Books <i class="glyphicon glyphicon-chevron-right"></i></a>
                    </div>
                </div>
            </div>
            <!--/col-12-->
        </div>
    </div>
